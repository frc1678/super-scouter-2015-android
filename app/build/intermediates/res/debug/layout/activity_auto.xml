<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/notrootLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:divider="@drawable/divider"
        android:dividerPadding="10dp"
        android:orientation="horizontal"
        android:showDividers="middle">

        <LinearLayout
            android:id="@+id/team1Layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <RelativeLayout
                android:id="@+id/team1NameLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/team1TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="4dp"
                    android:paddingTop="10dp"
                    android:text="None"
                    android:textColor="#00ff00"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="1M1"
                android:text="1 Recon Middle" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="1S1"
                android:text="1 Recon Side" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="2M1"
                android:text="2 Recons Middle" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="2S1"
                android:text="2 Recons Side" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="31"
                android:text="3 Recons" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="41"
                android:text="4 Recons" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Recons Fail"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/firstReconText"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/firstMinusButton"
                    android:layout_toRightOf="@+id/firstReconText"
                    android:tag="1-"
                    android:onClick="reconFailedClick"/>

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/firstReconNum"
                    android:layout_toRightOf="@+id/firstMinusButton"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_alignParentRight="true"
                    android:tag="1+"
                    android:onClick="reconFailedClick"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/team2Layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
