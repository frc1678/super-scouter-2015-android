                android:orientation="vertical">

                <TextView
                    android:id="@+id/team2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="4dp"
                    android:paddingTop="10dp"
                    android:text="None"
                    android:textColor="#00ff00"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="1M2"
                android:text="1 Recon Middle" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="1S2"
                android:text="1 Recon Side" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="2M2"
                android:text="2 Recons Middle" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="2S2"
                android:text="2 Recons Side" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="32"
                android:text="3 Recons" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="42"
                android:text="4 Recons" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Recons Fail"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/secondReconText"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/secondMinusButton"
                    android:layout_toRightOf="@+id/secondReconText"
                    android:tag="2-"
                    android:onClick="reconFailedClick"/>

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/secondReconNum"
                    android:layout_toRightOf="@+id/secondMinusButton"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_alignParentRight="true"
                    android:tag="2+"
                    android:onClick="reconFailedClick"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/team3Layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
