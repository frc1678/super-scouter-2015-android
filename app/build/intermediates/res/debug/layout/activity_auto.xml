                    android:paddingBottom="4dp"
                    android:paddingTop="10dp"
                    android:text="None"
                    android:textColor="#00ff00"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="1M3"
                android:text="1 Recon Middle" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="1S3"
                android:text="1 Recon Side" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="2M3"
                android:text="2 Recons Middle" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="2S3"
                android:text="2 Recons Side" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="33"
                android:text="3 Recons" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="reconClick"
                android:tag="43"
                android:text="4 Recons" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Recons Fail"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/thirdReconText"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:tag="3-"
                    android:id="@+id/thirdMinusButton"
                    android:layout_toRightOf="@+id/thirdReconText"
